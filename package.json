{
  "name": "@wallfair.io/trading-engine",
  "version": "0.1.39",
  "description": "Trading engine package to be used for Wallfair trading related microservices",
  "main": "build/src/index.js",
  "typings": "build/src/index.d.ts",
  "repository": "https://github.com/wallfair-organization/trading-engine",
  "license": "AGPL-3.0",
  "scripts": {
    "build": "rm -rf ./build && tsc -p tsconfig.json",
    "build:test": "rm -rf ./build/test && tsc -p tsconfig.spec.json",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --json build/docs/typedoc.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "entity:create": "npm run typeorm entity:create -- -n",
    "migration:create": "npm run typeorm migration:create -- -n",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "migration:run": "npm run typeorm migration:run",
    "schema:drop": "npm run typeorm schema:drop",
    "test": "run-s build:test test:*",
    "test:lint": "eslint src --ext .ts",
    "test:unit": "jest -i --detectOpenHandles --passWithNoTests --forceExit --coverage --verbose true --silent",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js --config src/db/config.ts",
    "version": "standard-version",
    "prepare-husky": "run-s fix test",
    "prepare-release": "run-s build test version"
  },
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "bignumber.js": "^9.0.1",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.38"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@babel/runtime": "^7.16.3",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-jest": "^27.3.1",
    "codecov": "^3.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "madge": "^5.0.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^6.0.1",
    "prettier": "^2.1.1",
    "standard-version": "^9.0.0",
    "ts-jest": "^27.0.7",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.0",
    "typescript": "^4.4.2"
  },
  "files": [
    "build/src",
    "!**/*.spec.*",
    "!**/*.json",
    "LICENSE",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  },
  "jest": {
    "roots": [
      "src"
    ],
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "src/index.ts",
      "src/lib/main.ts",
      "src/db/migrations",
      "src/db/config"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.spec.json"
      }
    },
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
